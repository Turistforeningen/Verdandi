{
  "extends": "airbnb-base",
  "env": {
    "mocha": true,
    "node": true
  },
  "plugins": ["mocha"],
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": false
    }
  },
  "rules": {
    "strict": [0],
    "arrow-parens": [2, "as-needed", { "requireForBlockBody": false }],
    "no-param-reassign": [2, { "props": false }],
    "no-underscore-dangle": [2, { "allow": ["_id", "_hasOpened", "__parent"] }],
    "no-unused-vars": ["error", { "args": "none" }],
    "mocha/no-exclusive-tests": "error"
  }
}
